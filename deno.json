{
  "tasks": {
    "api:dev": "deno serve -A --port=3021 api/server.ts --env=dev",
    "vite:dev": "deno run -A tasks/vite.js --env=dev",
    "dev": { "dependencies": ["api:dev", "vite:dev"] },
    "api:prod": "deno compile -A --output dist/api api/server.ts --env=prod",
    "vite:prod": "deno run -A tasks/vite.js --build --env=prod",
    "prod": { "dependencies": ["api:prod", "vite:prod"] },
    "start:prod": "dist/api --env=prod",
    "fmt": "deno fmt",
    "lint": "deno lint"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "vite": "npm:vite@^7.0.4",
    "preact": "npm:preact@^10.26.9",
    "@preact/preset-vite": "npm:@preact/preset-vite@^2.10.2"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "exclude": ["dist/", "metafile.json"]
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": [
      "deno.window",
      "deno.ns",
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "DOM.AsyncIterable",
      "webworker"
    ]
  }
}
